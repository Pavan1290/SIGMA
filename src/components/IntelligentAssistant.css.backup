.intelligent-assistant {
  display: flex;
  flex-direction: column;
  height: 100vh;
  width: 100vw;
  margin: 0;
  padding: 0;
  position: fixed;
  top: 0;
  left: 0;
  background: linear-gradient(135deg, #0f0c29 0%, #302b63 50%, #24243e 100%);
  font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
  overflow: hidden;
}

/* Premium Animated Background */
.intelligent-assistant::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: 
    radial-gradient(ellipse at top left, rgba(138, 43, 226, 0.15) 0%, transparent 50%),
    radial-gradient(ellipse at top right, rgba(0, 191, 255, 0.15) 0%, transparent 50%),
    radial-gradient(ellipse at bottom, rgba(255, 20, 147, 0.1) 0%, transparent 60%);
  z-index: 0;
  animation: gradientShift 15s ease-in-out infinite;
}

.intelligent-assistant::after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-image: 
    linear-gradient(rgba(138, 43, 226, 0.03) 1px, transparent 1px),
    linear-gradient(90deg, rgba(138, 43, 226, 0.03) 1px, transparent 1px);
  background-size: 50px 50px;
  z-index: 0;
  opacity: 0.3;
  animation: gridMove 20s linear infinite;
}

@keyframes gradientShift {
  0%, 100% { 
    opacity: 1;
    transform: scale(1);
  }
  50% { 
    opacity: 0.8;
    transform: scale(1.05);
  }
}

@keyframes gridMove {
  0% { 
    background-position: 0 0;
  }
  100% { 
    background-position: 50px 50px;
  }
}

/* Animated Floating Particles */
.intelligent-assistant > * {
  position: relative;
  z-index: 1;
}

/* Floating Orbs Animation */
body::before {
  content: '';
  position: fixed;
  top: -50%;
  left: -50%;
  width: 200%;
  height: 200%;
  background: 
    radial-gradient(circle at 20% 30%, rgba(138, 43, 226, 0.08) 0%, transparent 30%),
    radial-gradient(circle at 80% 70%, rgba(0, 191, 255, 0.08) 0%, transparent 30%),
    radial-gradient(circle at 40% 80%, rgba(255, 20, 147, 0.08) 0%, transparent 30%);
  z-index: 0;
  animation: floatOrbs 25s ease-in-out infinite;
  pointer-events: none;
}

body::after {
  content: '';
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: 
    linear-gradient(120deg, transparent 0%, rgba(138, 43, 226, 0.05) 50%, transparent 100%);
  z-index: 0;
  animation: shimmer 8s ease-in-out infinite;
  pointer-events: none;
}

@keyframes floatOrbs {
  0%, 100% { 
    transform: translate(0, 0) rotate(0deg);
  }
  33% { 
    transform: translate(5%, 5%) rotate(120deg);
  }
  66% { 
    transform: translate(-5%, 5%) rotate(240deg);
  }
}

@keyframes shimmer {
  0%, 100% { 
    opacity: 0.3;
  }
  50% { 
    opacity: 0.6;
  }
}

.header {
  padding: 2rem;
  text-align: center;
  background: linear-gradient(135deg, rgba(138, 43, 226, 0.15) 0%, rgba(0, 191, 255, 0.1) 100%);
  border-bottom: 1px solid rgba(138, 43, 226, 0.3);
  box-shadow: 0 4px 30px rgba(0, 0, 0, 0.3), 0 1px 0 rgba(255, 255, 255, 0.1) inset;
  position: relative;
  backdrop-filter: blur(20px) saturate(180%);
  -webkit-backdrop-filter: blur(20px) saturate(180%);
}

.header h1 {
  margin: 0;
  font-size: 3rem;
  font-weight: 800;
  letter-spacing: -1px;
  background: linear-gradient(135deg, #a855f7 0%, #3b82f6 50%, #06b6d4 100%);
  -webkit-background-clip: text;
  background-clip: text;
  -webkit-text-fill-color: transparent;
  text-shadow: 0 0 40px rgba(168, 85, 247, 0.3);
  animation: titleGlow 3s ease-in-out infinite;
  position: relative;
}

.header h1::after {
  content: '';
  position: absolute;
  bottom: -10px;
  left: 50%;
  transform: translateX(-50%);
  width: 100px;
  height: 3px;
  background: linear-gradient(90deg, transparent, #a855f7, #3b82f6, #06b6d4, transparent);
  border-radius: 2px;
  animation: lineExpand 3s ease-in-out infinite;
}

@keyframes titleGlow {
  0%, 100% { 
    filter: drop-shadow(0 0 20px rgba(168, 85, 247, 0.5));
  }
  50% { 
    filter: drop-shadow(0 0 40px rgba(59, 130, 246, 0.8));
  }
}

@keyframes lineExpand {
  0%, 100% { 
    width: 100px;
    opacity: 0.5;
  }
  50% { 
    width: 200px;
    opacity: 1;
  }
}

.subtitle {
  margin: 0.5rem 0 0 0;
  font-size: 1.1rem;
  opacity: 0.9;
  color: #c4b5fd;
  font-weight: 500;
  letter-spacing: 0.5px;
  text-shadow: 0 2px 10px rgba(168, 85, 247, 0.3);
}

.header-controls {
  display: flex;
  align-items: center;
  justify-content: flex-end;
  gap: 1rem;
  position: absolute;
  top: 2rem;
  right: 2rem;
}

.current-model-display {
  display: flex;
  align-items: center;
  gap: 0.5rem;
  background: rgba(0, 40, 0, 0.7);
  border: 1px solid rgba(0, 255, 0, 0.3);
  border-radius: 20px;
  padding: 0.5rem 1rem;
  font-size: 0.9rem;
  backdrop-filter: blur(10px);
  box-shadow: 0 0 10px rgba(0, 255, 0, 0.1);
}

.model-label {
  color: #88ff88;
  font-weight: 500;
}

.model-value {
  color: #00ff00;
  font-weight: 700;
  text-shadow: 0 0 8px rgba(0, 255, 0, 0.5);
}

.model-selector-button {
  background: linear-gradient(135deg, rgba(0, 255, 0, 0.15) 0%, rgba(0, 200, 0, 0.15) 100%);
  backdrop-filter: blur(10px);
  border: 2px solid rgba(0, 255, 0, 0.4);
  color: #00ff00;
  padding: 0.75rem 1.5rem;
  border-radius: 25px;
  font-size: 1rem;
  font-weight: 600;
  cursor: pointer;
  transition: all 0.3s;
  box-shadow: 0 0 15px rgba(0, 255, 0, 0.2);
}

.model-selector-button:hover {
  background: linear-gradient(135deg, rgba(0, 255, 0, 0.25) 0%, rgba(0, 200, 0, 0.25) 100%);
  border-color: rgba(0, 255, 0, 0.6);
  transform: translateY(-2px);
  box-shadow: 0 4px 20px rgba(0, 255, 0, 0.4);
}

/* Agent Status Panel */
.agent-status {
  margin: 1rem;
  padding: 1rem;
  background: linear-gradient(135deg, rgba(0, 30, 0, 0.95) 0%, rgba(0, 20, 0, 0.95) 100%);
  border-radius: 12px;
  border: 1px solid rgba(0, 255, 0, 0.2);
  box-shadow: 0 4px 15px rgba(0, 255, 0, 0.1);
  animation: slideDown 0.3s ease-out;
  color: #00ff00;
}

@keyframes slideDown {
  from {
    opacity: 0;
    transform: translateY(-20px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.agent-status.thinking {
  border-left: 4px solid #00ccff;
  box-shadow: 0 0 20px rgba(0, 204, 255, 0.2);
}

.agent-status.executing {
  border-left: 4px solid #ffaa00;
  box-shadow: 0 0 20px rgba(255, 170, 0, 0.2);
}

.agent-status.success {
  border-left: 4px solid #00ff00;
  box-shadow: 0 0 20px rgba(0, 255, 0, 0.3);
}

.agent-status.error {
  border-left: 4px solid #ff0000;
  box-shadow: 0 0 20px rgba(255, 0, 0, 0.2);
}

.status-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 0.5rem;
}

.agent-name {
  font-weight: 600;
  font-size: 1.1rem;
}

.status-badge {
  padding: 0.25rem 0.75rem;
  border-radius: 20px;
  font-size: 0.85rem;
  font-weight: 600;
  text-transform: uppercase;
  background: rgba(0, 255, 0, 0.15);
  color: #00ff00;
  border: 1px solid rgba(0, 255, 0, 0.3);
}

.agent-status.thinking .status-badge {
  background: rgba(0, 204, 255, 0.15);
  color: #00ccff;
  border-color: rgba(0, 204, 255, 0.3);
}

.agent-status.executing .status-badge {
  background: rgba(255, 170, 0, 0.15);
  color: #ffaa00;
  border-color: rgba(255, 170, 0, 0.3);
}

.agent-status.success .status-badge {
  background: rgba(0, 255, 0, 0.15);
  color: #00ff00;
  border-color: rgba(0, 255, 0, 0.3);
}

.agent-status.error .status-badge {
  background: rgba(255, 0, 0, 0.15);
  color: #ff4444;
  border-color: rgba(255, 0, 0, 0.3);
}

.status-message {
  color: #88ff88;
  margin-top: 0.5rem;
  font-size: 0.95rem;
}

.progress-bar {
  margin-top: 0.75rem;
  height: 24px;
  background: rgba(0, 255, 0, 0.1);
  border: 1px solid rgba(0, 255, 0, 0.2);
  border-radius: 12px;
  position: relative;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #00ff00, #00cc00, #00ff00);
  background-size: 200% 100%;
  border-radius: 12px;
  transition: width 0.3s ease;
  animation: shimmer 2s linear infinite;
  box-shadow: 0 0 15px rgba(0, 255, 0, 0.5);
}

@keyframes shimmer {
  0% { background-position: 200% 0; }
  100% { background-position: -200% 0; }
}

.progress-text {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  font-weight: 600;
  font-size: 0.85rem;
  color: #000000;
  text-shadow: 0 0 5px rgba(0, 255, 0, 0.5);
}

/* Thinking Process Panel */
.thinking-panel {
  margin: 0 1rem 1rem 1rem;
  padding: 1rem;
  background: linear-gradient(135deg, rgba(0, 30, 0, 0.95) 0%, rgba(0, 20, 0, 0.95) 100%);
  border: 1px solid rgba(0, 255, 0, 0.2);
  border-radius: 12px;
  box-shadow: 0 4px 15px rgba(0, 255, 0, 0.1);
  max-height: 200px;
  overflow-y: auto;
}

.thinking-panel h3 {
  margin: 0 0 0.75rem 0;
  font-size: 1rem;
  color: #00ff00;
  text-shadow: 0 0 10px rgba(0, 255, 0, 0.3);
}

.thinking-items {
  display: flex;
  flex-direction: column;
  gap: 0.5rem;
}

.thinking-item {
  padding: 0.5rem;
  border-left: 3px solid rgba(0, 255, 0, 0.3);
  background: rgba(0, 40, 0, 0.5);
  border-radius: 4px;
  font-size: 0.9rem;
}

.thinking-item.thinking {
  border-left-color: #00ccff;
  box-shadow: -3px 0 10px rgba(0, 204, 255, 0.2);
}

.thinking-item.executing {
  border-left-color: #ffaa00;
  box-shadow: -3px 0 10px rgba(255, 170, 0, 0.2);
}

.thinking-agent {
  font-weight: 600;
  color: #00ff00;
  margin-right: 0.5rem;
  text-shadow: 0 0 5px rgba(0, 255, 0, 0.5);
}

.thinking-message {
  color: #88ff88;
}

/* Messages Container */
.messages-container {
  flex: 1;
  overflow-y: auto;
  padding: 1rem;
  display: flex;
  flex-direction: column;
  gap: 1rem;
}

.welcome-message {
  text-align: center;
  color: #00ff00;
  padding: 3rem 2rem;
  max-width: 900px;
  margin: 0 auto;
}

.welcome-header h2 {
  font-size: 2.5rem;
  margin-bottom: 0.5rem;
  background: linear-gradient(135deg, #00ff00 0%, #00ff88 50%, #00ffaa 100%);
  -webkit-background-clip: text;
  background-clip: text;
  -webkit-text-fill-color: transparent;
  text-shadow: 0 0 20px rgba(0, 255, 0, 0.3);
  animation: glow 3s ease-in-out infinite;
}

.welcome-subtitle {
  font-size: 1.1rem;
  color: #88ff88;
  margin-bottom: 2rem;
  opacity: 0.9;
}

.features-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
  gap: 1rem;
  margin: 2rem 0;
}

.feature-card {
  background: linear-gradient(135deg, rgba(0, 255, 0, 0.08) 0%, rgba(0, 200, 0, 0.05) 100%);
  padding: 1.5rem;
  border-radius: 12px;
  border: 1px solid rgba(0, 255, 0, 0.2);
  transition: all 0.3s;
}

.feature-card:hover {
  background: linear-gradient(135deg, rgba(0, 255, 0, 0.12) 0%, rgba(0, 200, 0, 0.08) 100%);
  border-color: rgba(0, 255, 0, 0.4);
  transform: translateY(-5px);
  box-shadow: 0 8px 25px rgba(0, 255, 0, 0.2);
}

.feature-icon {
  font-size: 2.5rem;
  display: block;
  margin-bottom: 0.5rem;
}

.feature-card h3 {
  color: #00ff00;
  font-size: 1.1rem;
  margin: 0.5rem 0;
}

.feature-card p {
  color: #88ff88;
  font-size: 0.9rem;
  margin: 0;
  opacity: 0.9;
}

.connection-status {
  margin-top: 2rem;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 0.5rem;
  color: #00ff00;
  font-size: 0.9rem;
}

.status-dot {
  width: 8px;
  height: 8px;
  border-radius: 50%;
  animation: pulse-dot 2s ease-in-out infinite;
}

.status-dot.online {
  background: #00ff00;
  box-shadow: 0 0 10px rgba(0, 255, 0, 0.6);
}

@keyframes pulse-dot {
  0%, 100% { opacity: 1; transform: scale(1); }
  50% { opacity: 0.6; transform: scale(1.1); }
}

.example-commands {
  margin-top: 2rem;
  background: linear-gradient(135deg, rgba(0, 255, 0, 0.05) 0%, rgba(0, 200, 0, 0.05) 100%);
  padding: 1.5rem;
  border-radius: 12px;
  border: 1px solid rgba(0, 255, 0, 0.2);
  backdrop-filter: blur(10px);
  box-shadow: 0 4px 20px rgba(0, 255, 0, 0.1);
}

.example-commands h3 {
  margin-bottom: 1rem;
  color: #00ff00;
  font-size: 1.2rem;
}

.example-commands ul {
  list-style: none;
  padding: 0;
  text-align: left;
  max-width: 600px;
  margin: 0 auto;
}

.example-commands li {
  padding: 1rem;
  margin-bottom: 0.75rem;
  background: rgba(0, 255, 0, 0.08);
  border: 1px solid rgba(0, 255, 0, 0.15);
  border-radius: 8px;
  cursor: pointer;
  transition: all 0.3s;
  color: #88ff88;
  font-size: 1rem;
}

.example-commands li:hover {
  background: rgba(0, 255, 0, 0.15);
  border-color: rgba(0, 255, 0, 0.3);
  transform: translateX(5px);
  box-shadow: 0 0 15px rgba(0, 255, 0, 0.2);
  color: #00ff00;
}

/* Compact Agent Status - Bottom Right Corner */
.agent-status-compact {
  position: fixed;
  bottom: 100px;
  right: 2rem;
  z-index: 1000;
  min-width: 250px;
  max-width: 400px;
  padding: 1rem;
  background: rgba(0, 20, 0, 0.95);
  border: 2px solid rgba(0, 255, 0, 0.4);
  border-radius: 12px;
  box-shadow: 0 4px 20px rgba(0, 255, 0, 0.3);
  animation: slideInFromRight 0.3s ease-out;
  backdrop-filter: blur(10px);
}

@keyframes slideInFromRight {
  from {
    opacity: 0;
    transform: translateX(100px);
  }
  to {
    opacity: 1;
    transform: translateX(0);
  }
}

.compact-header {
  display: flex;
  align-items: center;
  gap: 0.75rem;
}

.compact-icon {
  font-size: 1.5rem;
  animation: bounce 1s ease-in-out infinite;
}

@keyframes bounce {
  0%, 100% { transform: translateY(0); }
  50% { transform: translateY(-5px); }
}

.compact-text {
  color: #00ff00;
  font-size: 0.95rem;
  font-weight: 500;
}

.compact-progress {
  margin-top: 0.75rem;
  height: 4px;
  background: rgba(0, 255, 0, 0.2);
  border-radius: 2px;
  overflow: hidden;
}

.compact-progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #00ff00, #00ff88);
  transition: width 0.3s ease;
  box-shadow: 0 0 10px rgba(0, 255, 0, 0.6);
}

.agent-status-compact.success {
  border-color: rgba(0, 255, 100, 0.6);
}

.agent-status-compact.error {
  border-color: rgba(255, 50, 50, 0.6);
}

.agent-status-compact.error .compact-text {
  color: #ff5555;
}

.message {
  padding: 1rem;
  border-radius: 12px;
  max-width: 80%;
  animation: fadeIn 0.3s ease-out;
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(10px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.message.user {
  align-self: flex-end;
  background: linear-gradient(135deg, rgba(0, 255, 0, 0.15) 0%, rgba(0, 200, 0, 0.15) 100%);
  color: #00ff00;
  margin-left: auto;
  border: 1px solid rgba(0, 255, 0, 0.3);
  box-shadow: 0 0 15px rgba(0, 255, 0, 0.1);
}

.message.assistant,
.message.agent {
  align-self: flex-start;
  background: linear-gradient(135deg, rgba(0, 30, 0, 0.95) 0%, rgba(0, 20, 0, 0.95) 100%);
  color: #88ff88;
  border: 1px solid rgba(0, 255, 0, 0.2);
  box-shadow: 0 4px 15px rgba(0, 255, 0, 0.1);
}

.message.system {
  align-self: center;
  background: rgba(0, 255, 0, 0.08);
  color: #00ff00;
  text-align: center;
  max-width: 90%;
  border: 1px solid rgba(0, 255, 0, 0.2);
}

.message.error {
  align-self: flex-start;
  background: rgba(255, 0, 0, 0.15);
  color: #ff4444;
  border: 1px solid rgba(255, 0, 0, 0.3);
  border-left: 4px solid #ff0000;
  box-shadow: 0 0 15px rgba(255, 0, 0, 0.2);
}

.message-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 0.5rem;
  font-size: 0.85rem;
  opacity: 0.8;
}

.message-icon {
  font-size: 1.2rem;
}

.message-content {
  line-height: 1.6;
}

.message-content pre {
  margin: 0;
  white-space: pre-wrap;
  word-wrap: break-word;
  font-family: inherit;
}

/* Input Form */
.input-form {
  padding: 1rem;
  background: linear-gradient(180deg, rgba(0, 40, 0, 0.8) 0%, rgba(0, 20, 0, 0.95) 100%);
  border-top: 2px solid rgba(0, 255, 0, 0.2);
  box-shadow: 0 -4px 20px rgba(0, 255, 0, 0.1);
  display: flex;
  gap: 0.75rem;
}

.command-input {
  flex: 1;
  padding: 1rem 1.5rem;
  border: 2px solid rgba(0, 255, 0, 0.3);
  background: rgba(0, 20, 0, 0.8);
  color: #00ff00;
  border-radius: 25px;
  font-size: 1rem;
  outline: none;
  transition: all 0.3s;
}

.command-input::placeholder {
  color: rgba(0, 255, 0, 0.4);
}

.command-input:focus {
  border-color: #00ff00;
  box-shadow: 0 0 0 3px rgba(0, 255, 0, 0.15), 0 0 20px rgba(0, 255, 0, 0.2);
  background: rgba(0, 30, 0, 0.9);
}

.command-input:disabled {
  background: rgba(0, 10, 0, 0.5);
  cursor: not-allowed;
  opacity: 0.5;
}

.send-button {
  padding: 1rem 2rem;
  background: linear-gradient(135deg, #00ff00 0%, #00cc00 50%, #00ff00 100%);
  background-size: 200% 100%;
  color: #000000;
  border: none;
  border-radius: 25px;
  font-size: 1rem;
  font-weight: 700;
  cursor: pointer;
  transition: all 0.3s;
  box-shadow: 0 0 20px rgba(0, 255, 0, 0.3);
  animation: buttonShimmer 3s linear infinite;
}

@keyframes buttonShimmer {
  0% { background-position: 200% 0; }
  100% { background-position: -200% 0; }
}

.send-button:hover:not(:disabled) {
  transform: translateY(-2px);
  box-shadow: 0 4px 25px rgba(0, 255, 0, 0.5);
}

.send-button:disabled {
  opacity: 0.4;
  cursor: not-allowed;
  animation: none;
}

/* Scrollbar */
.messages-container::-webkit-scrollbar,
.thinking-panel::-webkit-scrollbar {
  width: 8px;
}

.messages-container::-webkit-scrollbar-track,
.thinking-panel::-webkit-scrollbar-track {
  background: rgba(0, 255, 0, 0.05);
  border-radius: 4px;
}

.messages-container::-webkit-scrollbar-thumb,
.thinking-panel::-webkit-scrollbar-thumb {
  background: rgba(0, 255, 0, 0.3);
  border-radius: 4px;
}

.messages-container::-webkit-scrollbar-thumb:hover,
.thinking-panel::-webkit-scrollbar-thumb:hover {
  background: rgba(0, 255, 0, 0.5);
}

/* Task Result Expandable Details */
.task-result {
  width: 100%;
}

.task-summary h3 {
  margin: 0 0 0.75rem 0;
  font-size: 1.2rem;
  color: #00ff00;
  text-shadow: 0 0 10px rgba(0, 255, 0, 0.5);
}

.task-meta {
  display: flex;
  flex-direction: column;
  gap: 0.5rem;
  margin-top: 0.75rem;
  padding: 0.75rem;
  background: rgba(0, 40, 0, 0.5);
  border: 1px solid rgba(0, 255, 0, 0.2);
  border-radius: 8px;
}

.meta-item {
  font-size: 0.9rem;
  color: #88ff88;
}

.meta-item strong {
  color: #aaffaa;
}

.task-expand-container {
  margin-top: 1rem;
}

.expand-button {
  width: 100%;
  padding: 0.75rem 1rem;
  background: rgba(0, 255, 0, 0.08);
  border: 2px solid rgba(0, 255, 0, 0.3);
  border-radius: 8px;
  font-size: 0.95rem;
  font-weight: 600;
  color: #00ff00;
  cursor: pointer;
  transition: all 0.3s;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 0.5rem;
}

.expand-button:hover {
  background: rgba(0, 255, 0, 0.15);
  border-color: rgba(0, 255, 0, 0.5);
  box-shadow: 0 0 15px rgba(0, 255, 0, 0.2);
}

.task-details {
  margin-top: 1rem;
  padding: 1rem;
  background: rgba(0, 40, 0, 0.6);
  border-radius: 8px;
  border: 2px solid rgba(0, 255, 0, 0.2);
  animation: slideDown 0.3s ease-out;
}

.detail-section {
  margin-bottom: 1.5rem;
  padding-bottom: 1.5rem;
  border-bottom: 1px solid rgba(0, 255, 0, 0.15);
}

.detail-section:last-child {
  margin-bottom: 0;
  padding-bottom: 0;
  border-bottom: none;
}

.detail-section h4 {
  margin: 0 0 0.75rem 0;
  font-size: 1rem;
  color: #00ff00;
  display: flex;
  align-items: center;
  gap: 0.5rem;
  text-shadow: 0 0 10px rgba(0, 255, 0, 0.3);
}

.detail-section p {
  margin: 0;
  color: #88ff88;
  line-height: 1.6;
}

.detail-section ul {
  margin: 0;
  padding-left: 1.5rem;
  color: #88ff88;
}

.detail-section li {
  margin-bottom: 0.5rem;
  line-height: 1.5;
}

.step-item {
  background: rgba(0, 50, 0, 0.5);
  padding: 1rem;
  border-radius: 8px;
  margin-bottom: 0.75rem;
  border-left: 4px solid #00ccff;
  border: 1px solid rgba(0, 204, 255, 0.3);
  box-shadow: -3px 0 10px rgba(0, 204, 255, 0.2);
}

.step-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 0.5rem;
}

.step-number {
  font-weight: 700;
  color: #00ccff;
  font-size: 0.9rem;
  text-shadow: 0 0 5px rgba(0, 204, 255, 0.5);
}

.step-tool {
  font-size: 0.85rem;
  color: #00ff00;
  background: rgba(0, 255, 0, 0.1);
  border: 1px solid rgba(0, 255, 0, 0.2);
  padding: 0.25rem 0.75rem;
  border-radius: 12px;
}

.step-action {
  color: #00ff00;
  font-weight: 500;
  margin-bottom: 0.5rem;
}

.step-outcome {
  color: #88ff88;
  font-size: 0.9rem;
  margin-top: 0.5rem;
  padding: 0.5rem;
  background: rgba(0, 40, 0, 0.5);
  border: 1px solid rgba(0, 255, 0, 0.15);
  border-radius: 4px;
}

/* Main Output Section - Always Visible */
.main-output {
  margin-top: 1rem;
  padding: 1rem;
  background: rgba(0, 40, 0, 0.7);
  border: 1px solid rgba(0, 255, 0, 0.3);
  border-radius: 8px;
  box-shadow: 0 0 15px rgba(0, 255, 0, 0.1);
}

.main-output h4 {
  margin: 0 0 0.75rem 0;
  color: #00ff00;
  font-size: 1rem;
  font-weight: 600;
  text-shadow: 0 0 10px rgba(0, 255, 0, 0.5);
}

.output-text {
  color: #aaffaa;
  background: rgba(0, 20, 0, 0.9);
  padding: 1rem;
  border-radius: 6px;
  margin: 0.5rem 0;
  border: 1px solid rgba(0, 255, 0, 0.2);
  font-family: 'Courier New', monospace;
  font-size: 0.95rem;
  line-height: 1.5;
  overflow-x: auto;
  white-space: pre-wrap;
  word-break: break-word;
}

.command-executed {
  color: #88ff88;
  background: rgba(0, 40, 0, 0.6);
  padding: 0.75rem;
  border-radius: 6px;
  margin: 0.5rem 0;
  border-left: 3px solid #00ff00;
  font-family: 'Courier New', monospace;
  font-size: 0.9rem;
}

.execution-result {
  background: rgba(0, 50, 0, 0.5);
  padding: 1rem;
  border-radius: 8px;
  margin-bottom: 0.75rem;
  border: 1px solid rgba(0, 255, 0, 0.3);
  border-left: 4px solid #00ff00;
  box-shadow: -3px 0 10px rgba(0, 255, 0, 0.2);
}

.execution-result.failed {
  border-color: rgba(255, 0, 0, 0.3);
  border-left-color: #ff0000;
  box-shadow: -3px 0 10px rgba(255, 0, 0, 0.2);
}

.result-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 0.75rem;
}

.result-status {
  font-weight: 700;
  font-size: 0.9rem;
}

.result-status.success {
  color: #00ff00;
  text-shadow: 0 0 5px rgba(0, 255, 0, 0.5);
}

.result-status.failed {
  color: #ff4444;
  text-shadow: 0 0 5px rgba(255, 0, 0, 0.5);
}

.exit-code {
  font-size: 0.85rem;
  color: #00ff00;
  background: rgba(0, 255, 0, 0.1);
  border: 1px solid rgba(0, 255, 0, 0.2);
  padding: 0.25rem 0.75rem;
  border-radius: 12px;
  font-family: 'Monaco', 'Courier New', monospace;
}

.result-command,
.result-operation,
.result-path,
.result-output,
.result-error {
  margin-top: 0.75rem;
  font-size: 0.9rem;
}

.result-command strong,
.result-operation strong,
.result-path strong,
.result-output strong,
.result-error strong {
  display: block;
  color: #00ff00;
  margin-bottom: 0.25rem;
}

.result-command code,
.result-path code {
  background: rgba(0, 20, 0, 0.9);
  color: #00ff00;
  border: 1px solid rgba(0, 255, 0, 0.3);
  padding: 0.5rem;
  border-radius: 4px;
  display: block;
  font-family: 'Monaco', 'Courier New', monospace;
  font-size: 0.85rem;
  overflow-x: auto;
  box-shadow: inset 0 0 10px rgba(0, 255, 0, 0.1);
}

.result-output pre,
.result-error pre {
  background: rgba(0, 20, 0, 0.9);
  color: #00dd00;
  border: 1px solid rgba(0, 255, 0, 0.2);
  padding: 0.75rem;
  border-radius: 4px;
  overflow-x: auto;
  font-size: 0.85rem;
  margin: 0;
  box-shadow: inset 0 0 10px rgba(0, 255, 0, 0.1);
}

.result-error pre {
  color: #ff6666;
  border-color: rgba(255, 0, 0, 0.3);
  box-shadow: inset 0 0 10px rgba(255, 0, 0, 0.1);
}

/* ========================================
   MODERN INPUT FORM - HIGH STANDARD DESIGN
   ======================================== */

.input-form-modern {
  background: linear-gradient(135deg, rgba(0, 20, 0, 0.95) 0%, rgba(0, 40, 0, 0.98) 100%);
  border-top: 2px solid rgba(0, 255, 0, 0.3);
  padding: 1.5rem 2rem 1rem 2rem;
  box-shadow: 0 -8px 32px rgba(0, 255, 0, 0.15);
  backdrop-filter: blur(10px);
}

.input-container {
  display: flex;
  gap: 1rem;
  align-items: stretch;
  margin-bottom: 0.75rem;
}

.input-wrapper {
  flex: 1;
  position: relative;
  display: flex;
  align-items: center;
  background: rgba(0, 0, 0, 0.4);
  border: 2px solid rgba(0, 255, 0, 0.3);
  border-radius: 16px;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  overflow: hidden;
}

.input-wrapper:focus-within {
  border-color: rgba(0, 255, 0, 0.6);
  background: rgba(0, 0, 0, 0.5);
  box-shadow: 
    0 0 20px rgba(0, 255, 0, 0.2),
    inset 0 0 20px rgba(0, 255, 0, 0.05);
}

.input-icon {
  width: 24px;
  height: 24px;
  margin-left: 1.25rem;
  color: #00ff00;
  opacity: 0.6;
  transition: opacity 0.3s;
}

.input-wrapper:focus-within .input-icon {
  opacity: 1;
  animation: pulse-glow 2s ease-in-out infinite;
}

.command-input-modern {
  flex: 1;
  background: transparent;
  border: none;
  outline: none;
  color: #00ff00;
  font-size: 1.1rem;
  font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
  padding: 1rem 1rem 1rem 0.75rem;
  font-weight: 500;
}

.command-input-modern::placeholder {
  color: rgba(0, 255, 0, 0.4);
  font-weight: 400;
}

.command-input-modern:disabled {
  opacity: 0.6;
  cursor: not-allowed;
}

.clear-button {
  background: transparent;
  border: none;
  color: rgba(0, 255, 0, 0.5);
  cursor: pointer;
  padding: 0.5rem;
  margin-right: 0.5rem;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 8px;
  transition: all 0.2s;
}

.clear-button svg {
  width: 20px;
  height: 20px;
}

.clear-button:hover {
  background: rgba(255, 0, 0, 0.1);
  color: #ff4444;
  transform: scale(1.1);
}

/* Execute Button - Modern Design */
.execute-button {
  position: relative;
  background: linear-gradient(135deg, #00ff00 0%, #00cc00 100%);
  border: none;
  color: #000;
  font-size: 1.1rem;
  font-weight: 700;
  padding: 1rem 2.5rem;
  border-radius: 16px;
  cursor: pointer;
  display: flex;
  align-items: center;
  gap: 0.75rem;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  text-transform: uppercase;
  letter-spacing: 0.5px;
  box-shadow: 
    0 4px 15px rgba(0, 255, 0, 0.4),
    inset 0 1px 0 rgba(255, 255, 255, 0.2);
  overflow: hidden;
  min-width: 160px;
  justify-content: center;
}

.execute-button:hover:not(:disabled) {
  transform: translateY(-2px);
  box-shadow: 
    0 6px 25px rgba(0, 255, 0, 0.6),
    inset 0 1px 0 rgba(255, 255, 255, 0.3);
  background: linear-gradient(135deg, #00ff44 0%, #00dd00 100%);
}

.execute-button:active:not(:disabled) {
  transform: translateY(0);
  box-shadow: 
    0 2px 10px rgba(0, 255, 0, 0.4),
    inset 0 1px 0 rgba(255, 255, 255, 0.1);
}

.execute-button:disabled {
  opacity: 0.4;
  cursor: not-allowed;
  transform: none;
}

/* Terminate Button - Danger Style */
.terminate-button {
  position: relative;
  background: linear-gradient(135deg, #ff4444 0%, #cc0000 100%);
  border: none;
  color: #fff;
  font-size: 1.1rem;
  font-weight: 700;
  padding: 1rem 2.5rem;
  border-radius: 16px;
  cursor: pointer;
  display: flex;
  align-items: center;
  gap: 0.75rem;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  text-transform: uppercase;
  letter-spacing: 0.5px;
  box-shadow: 
    0 4px 15px rgba(255, 0, 0, 0.4),
    inset 0 1px 0 rgba(255, 255, 255, 0.2);
  animation: pulse-danger 2s ease-in-out infinite;
  overflow: hidden;
  min-width: 160px;
  justify-content: center;
}

.terminate-button:hover {
  transform: translateY(-2px);
  box-shadow: 
    0 6px 25px rgba(255, 0, 0, 0.6),
    inset 0 1px 0 rgba(255, 255, 255, 0.3);
  background: linear-gradient(135deg, #ff6666 0%, #dd0000 100%);
}

.terminate-button:active {
  transform: translateY(0);
  box-shadow: 
    0 2px 10px rgba(255, 0, 0, 0.4),
    inset 0 1px 0 rgba(255, 255, 255, 0.1);
}

.button-icon {
  width: 20px;
  height: 20px;
  flex-shrink: 0;
}

.button-text {
  position: relative;
  z-index: 1;
}

.button-glow {
  position: absolute;
  inset: 0;
  background: radial-gradient(circle at center, rgba(255, 255, 255, 0.3) 0%, transparent 70%);
  opacity: 0;
  transition: opacity 0.3s;
}

.execute-button:hover .button-glow {
  opacity: 1;
  animation: glow-pulse 1.5s ease-in-out infinite;
}

.terminate-button:hover .button-glow {
  opacity: 1;
  animation: glow-pulse-danger 1.5s ease-in-out infinite;
}

/* Input Footer - Stats and Status */
.input-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 0.5rem;
  font-size: 0.85rem;
}

.input-stats {
  display: flex;
  gap: 1rem;
  align-items: center;
  color: rgba(0, 255, 0, 0.6);
}

.char-count {
  font-weight: 500;
}

.warning-badge {
  background: rgba(255, 165, 0, 0.2);
  color: #ffaa00;
  padding: 0.25rem 0.75rem;
  border-radius: 12px;
  font-size: 0.75rem;
  font-weight: 600;
  border: 1px solid rgba(255, 165, 0, 0.3);
  animation: pulse-warning 2s ease-in-out infinite;
}

/* Animations for Modern Input */
@keyframes pulse-glow {
  0%, 100% { opacity: 0.6; transform: scale(1); }
  50% { opacity: 1; transform: scale(1.05); }
}

@keyframes pulse-danger {
  0%, 100% { box-shadow: 0 4px 15px rgba(255, 0, 0, 0.4), inset 0 1px 0 rgba(255, 255, 255, 0.2); }
  50% { box-shadow: 0 4px 20px rgba(255, 0, 0, 0.6), inset 0 1px 0 rgba(255, 255, 255, 0.3); }
}

@keyframes pulse-warning {
  0%, 100% { opacity: 0.8; }
  50% { opacity: 1; }
}

@keyframes glow-pulse {
  0%, 100% { opacity: 0; }
  50% { opacity: 1; }
}

@keyframes glow-pulse-danger {
  0%, 100% { opacity: 0; }
  50% { opacity: 0.8; }
}

/* Responsive Design for Modern Input */
@media (max-width: 768px) {
  .input-form-modern {
    padding: 1rem;
  }
  
  .input-container {
    flex-direction: column;
  }
  
  .execute-button,
  .terminate-button {
    width: 100%;
    justify-content: center;
    padding: 1rem;
  }
  
  .input-footer {
    flex-direction: column;
    gap: 0.5rem;
    align-items: flex-start;
  }
}
